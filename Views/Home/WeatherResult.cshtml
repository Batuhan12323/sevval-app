
@model WeatherAppWithLocalAPI.Models.WeatherViewModel

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@Model.City Hava Durumu</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <div class="container mt-5">
        <h1 class="text-center">@Model.City Hava Durumu</h1>
        <div class="card mt-3">
            <div class="card-body">
                <h5 class="card-title">Sıcaklık: @Model.Temp °C</h5>
                <p class="card-text">Durum: @Model.Description</p>
                <p class="card-text">Minimum Sıcaklık: @Model.MinTemp °C</p>
                <p class="card-text">Maksimum Sıcaklık: @Model.MaxTemp °C</p>
            </div>
        </div>
    </div>
</body>
</html>
    