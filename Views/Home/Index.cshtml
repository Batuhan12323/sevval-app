
@{
    ViewData["Title"] = "Hava Durumu";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Hava Durumu</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <div class="container mt-5">
        <h1 class="text-center">Şehir Hava Durumu</h1>
        <form method="post" action="/Home/GetWeather">
            <div class="mb-3">
                <label for="city" class="form-label">Şehir Adı</label>
                <input type="text" class="form-control" id="city" name="city" placeholder="Şehir adı girin">
            </div>
            <button type="submit" class="btn btn-primary">Hava Durumunu Getir</button>
        </form>
        @if (ViewBag.Error != null)
        {
            <div class="alert alert-danger mt-3">@ViewBag.Error</div>
        }
    </div>
</body>
</html>
    